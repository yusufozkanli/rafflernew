<div class="container text-center">
  <h1>Recent winners</h1>
   <div class="row">
     <% @orders.each do |o| %>
      <div class="col-xs-12 col-sm-6 col-lg-3">
        <div class="card">
          <div class="image" id="winner-image-box">
            <%= cl_image_tag o.raffle.photo, id: "winner-image", class: "img-show", crop: :fill, style: "width: 260px; height: 175px;" %>
            <p class="image-text"> Completed </p>
          </div>
            <div class="card-info">
              <div class="info raffle-name">
              <p> <strong> <%= o.user.name %> </strong> </p>
              <p> <%= o.raffle.title %> </p>
              </div>
              <%= cl_image_tag o.user.photo, class: "img-avatar", crop: :fill, style: "width: 30px; height: 30px;" %>
            </div>
          </div>
          <%= link_to "", raffle_order_winner_path(o.raffle, o), class: "card-link"%>
        </div>
      <% end %>
    </div>
</div>

