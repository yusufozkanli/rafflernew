<div class="navbar-wagon">
  <!-- Logo -->
  <div class="navbar-wagon-left">
    <%= link_to root_path, class: "navbar-wagon-brand" do %>
      <%= image_tag "LogoRaffler2.png" %>
    <% end %>
    <%= link_to root_path, class: "navbar-raffler-title" do %>
      Raffler
    <% end %>
<!--     <a href= class="navbar-raffler-title">Raffler</a> -->
    <div class="navbar-search">
      <i class="fa fa-search search-icon"></i>
      <input type="text" class="navbar-search-field" placeholder="Search">

    </div>
</div>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right">

    <% #if user_signed_in? %>

      <!-- Links when logged in -->
      <div class="navbar-wagon-item navbar-ticket-item">
        <div class="navbar-ticket-counter"># You have 1 ticket</div>
        <%= link_to "Buy Tickets", "#", class: "navbar-wagon-item btn-success navbar-buy-tickets" %>
      </div>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <% if user_signed_in? %>
          <div class="dropdown">
            <% if current_user.photo? %>
              <div class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown" style="background-image: url('<%= cl_image_path current_user.photo %>')"></div>
            <% else %>
              <div class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown" style="background-image: url('https://kitt.lewagon.com/placeholder/users/ssaunier')"></div>
            <% end %>
            <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
              <li>
                <%= link_to user_path(current_user) do %>
                 <i class="fa fa-user navbar-dropdown-icon"></i> <%= t(".profile", default: "Dashboard") %>
                <% end %>
              </li>
              <li>
               <%= link_to root_path do %>
                <i class="fa fa-home navbar-dropdown-icon"></i>  <%= t(".profile", default: "Home") %>
               <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out navbar-dropdown-icon"></i>  <%= t(".sign_out", default: "Log out") %>
                <% end %>
              </li>
            </ul>
          </div>
        <% else %>
        <%= link_to "Sign Up", new_user_registration_path(current_user), class: "navbar-wagon-item navbar-wagon-link"%>
        <%= link_to "Sign In", new_user_session_path(current_user), class: "navbar-wagon-item navbar-wagon-link"%>
        <% end %>
      </div>

    <% #else %>
      <!-- Login link (when logged out) -->
 <!--      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %> -->
    <% #end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->

</div>



