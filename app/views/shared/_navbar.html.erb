<div class="navbar-wagon">
  <!-- Logo -->
  <div class="navbar-wagon-left">
    <%= link_to root_path, class: "navbar-wagon-brand" do %>
      <%= image_tag "LogoRaffler2.png" %>
    <% end %>
    <%= link_to root_path, class: "navbar-raffler-title" do %>
      <span class="font-playfair" style="letter-spacing: 1px;">Rafflrs</span>
    <% end %>


    <%= form_tag browse_path, :method => 'get' do %>
      <div class="navbar-search">
        <input type="text" name="search" id="search" class="navbar-search-field" placeholder="Search">
        <%= button_tag(class: "navbar-button") do %>
          <i class="fa fa-search search-icon"></i>
        <% end %>
      </div>
    <% end %>
  </div>


  <!-- Right Navigation -->
  <div class="navbar-wagon-right collapse navbar-collapse">
    <!-- Avatar with dropdown menu -->
    <% if user_signed_in? %>
    <div class="navbar-wagon-item navbar-ticket-item navbar-display">
      <%= link_to "Create a Raffle", "/raffles/new", class: "navbar-wagon-item navbar-create-button" %>
    <div class="dropdown">
      <% if current_user.photo? %>
        <div class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown" style="background-image: url('<%= cl_image_path current_user.photo %>')">
        </div>
      <% else %>
        <div class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown" style="background-image: url('<%= current_user.facebook_picture_url || 'https://www.lookout.com/uploads/images/other/legal/privacy-policy/legal-icons-user.svg' %>')">
        </div>

      <% end %>

      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li>
          <%= link_to user_path(current_user, :tab => "Participant") do %>
           <i class="fa fa-user navbar-dropdown-icon"></i> <%= t(".profile", default: "Dashboard") %>
          <% end %>
        </li>
        <li>
          <%= link_to new_raffle_path do %>
           <i class="fa fa-plus navbar-dropdown-icon"></i> <%= t(".profile", default: "List a Raffle") %>
          <% end %>
        </li>
        <li>
         <%= link_to root_path do %>
          <i class="fa fa-home navbar-dropdown-icon"></i>  <%= t(".profile", default: "Home") %>
         <% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out navbar-dropdown-icon"></i>  <%= t(".sign_out", default: "Log out") %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
  <% else %>
  <div class="navbar-wagon-item navbar-ticket-item">
    <%= link_to "Create a Raffle", "raffles/new", class: "navbar-wagon-item navbar-create-button" %>
    <a class= "navbar-wagon-item navbar-wagon-link", data-toggle = "modal" , data-target ="#myModal2"> Sign In </a>
    <a class= "navbar-wagon-item navbar-wagon-link", data-toggle = "modal" , data-target ="#myModal"> Sign Up </a>
  </div>
  <% end %>
  </div>
</div>


<!-- Modal DO NOT TOUCH !! -->

<div class="modal green-modal fade text-center" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <%= render 'devise/registrations/new' %>
      </div>
    </div>
  </div>
</div>



<div class="modal green-modal fade text-center" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <%= render 'devise/sessions/new' %>
      </div>
    </div>
  </div>
</div>

