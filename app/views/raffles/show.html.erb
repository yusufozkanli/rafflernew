<div class="container" style=" background:#f1f1f1; width:100%">
  <div class="rafflebox">

    <div class="leftbox">
      <div class="image-item">
        <div class="raffle-image" style="background-image: url(<%= cl_image_path @raffle.photo, crop: :fill, width: 400; %>)">
        </div>
      </div>
    </div>

    <div class="rightbox">
      <div class="rightbox-content text-left">
        <div class="your-clock" style="color: #2bde73" " data-countdown="<%= @raffle.end_date.to_i * 1000 %>">
        </div>
        <h2><span><%= @raffle.title %></span></h2>
        <%= render 'orders/new' %>
      </div>
    </div>
  </div>
</div>

<div class="infobox">
  <div class="leftbox-info">
    <div class="raffle-info-content">
      <h2> Information </h2>
            <p><strong> Category:</strong> <span><%= @raffle.category_name %> <span></p>
            <p><strong> Category: </strong><span><%= @raffle.model %><span></p>
            <p><strong> Brand:</strong> <span><%= @raffle.brand %> <span></p>
            <p><strong> Color: </strong><span> <%= @raffle.color %> <span></p>
             <p><strong> Sold by:</strong> <span><%= link_to "#{@raffle.user.name}", user_path(@user) %></p>
    </div>
  </div>
  <div class="righbox-description">
    <div class="raffle-info-content">
      <h2> Description </h2>
            <p><span><%= @raffle.description %> <span></p>
    </div>
  </div>



